---
import ToggleButton from "../buttons/ToggleButton.astro";
import TraslucentContainer from "../containers/TraslucentContainer.astro";
import { getRelativeLocaleUrl } from "astro:i18n";
import ToggleLanguage from "../buttons/ToggleLanguage.astro";
import type { Lang, TranslateFunctionType } from "@/i18n/utils";

interface NavigationLinks {
    title: string;
    label?: string;
    href: string;
}

interface Props {
    lang: Lang;
    t: TranslateFunctionType;
}

const { lang, t } = Astro.props;

const navigationLinks: NavigationLinks[] = [
    {
        title: t("nav.home"),
        label: "home",
        href: getRelativeLocaleUrl(lang) + "#",
    },
    {
        title: t("nav.projects"),
        label: "projects",
        href: getRelativeLocaleUrl(lang) + "#projects",
    },
    {
        title: t("nav.experience"),
        label: "experience",
        href: getRelativeLocaleUrl(lang) + "#experience",
    },
    {
        title: t("nav.stacks"),
        label: "stacks",
        href: getRelativeLocaleUrl(lang) + "#stacks",
    },
    {
        title: t("nav.about-me"),
        label: "about-me",
        href: getRelativeLocaleUrl(lang) + "#about-me",
    },
];
---

<header class="px-4 mt-4">
    <div class="container mx-auto flex justify-between items-start">
        <ToggleButton />

        <ToggleLanguage lang={lang} />
    </div>
</header>

<nav
    class="flex justify-center px-4 sticky top-5 left-0 right-0 pointer-events-none z-10 sm:fixed mt-5 sm:mt-auto"
>
    <TraslucentContainer
        class="overflow-x-auto scroll-smooth touch-pan-x pointer-events-auto"
    >
        <ul class="flex flex-nowrap text-nowrap *:first:*:pl-4 *:last:*:pr-4">
            {
                navigationLinks.map(({ title, href, label }) => (
                    <li class="block">
                        <a
                            class="inline-block px-2 py-1 text-gray-800 transition-colors duration-300 hover:text-sky-500 dark:text-white"
                            aria-label={label}
                            href={href}
                        >
                            {title}
                        </a>
                    </li>
                ))
            }
        </ul>
    </TraslucentContainer>
</nav>

<script>
    const navItems = document.querySelectorAll("nav>div>ul>li>a");
    const observerOptions: IntersectionObserverInit = {
        root: null,
        rootMargin: "0px",
        threshold: 0.2,
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
            const { isIntersecting } = entry;

            if (isIntersecting) {
                navItems.forEach((item) => {
                    const label = item.getAttribute("aria-label");
                    if (label === entry.target.id) {
                        item.classList.add("!text-sky-500");
                    } else {
                        item.classList.remove("!text-sky-500");
                    }
                });
            }
        });
    }, observerOptions);

    const sections = document.querySelectorAll("section[id]");
    sections.forEach((section) => {
        observer.observe(section);
    });

    // Cleanup function
    document.onvisibilitychange = () => {
        if (document.visibilityState === "hidden") {
            observer.disconnect();
        } else {
            sections.forEach((section) => {
                observer.observe(section);
            });
        }
    };
</script>
