---
import { Image } from "astro:assets";
import { ICONS } from "@/constants/icons";

interface Props {
    name: string;
}

const { name } = Astro.props;
const icon = ICONS[name.toLowerCase().replace(" ", "")];
---

<div
    class="border-1 rounded-sm px-2 py-1 inline-block space-x-1 dark:border-white"
>
    <Image
        class="inline-block size-6 object-contain"
        src={icon}
        alt={name}
        height="24"
        width="24"
    />
    <span class="font-medium inline-block text-gray-800 text-xs dark:text-white"
        >{name}</span
    >
</div>
