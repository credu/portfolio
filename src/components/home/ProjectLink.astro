---
import { type ProjectLinksType } from "@/types/Project";
import { LOCAL_ICONS, LOCAL_ICONS_NAMES } from "@/constants/icons";

interface Props {
    href: string;
    type?: ProjectLinksType;
}

const { href, type } = Astro.props;

const Icon =
    type && LOCAL_ICONS_NAMES.includes(type)
        ? LOCAL_ICONS[type]
        : LOCAL_ICONS.anchor;
---

<a
    class="inline-block"
    href={href}
    aria-label={`Anchor to ${type}`}
    target="_blank"
    rel="noopener noreferrer"
>
    <Icon
        class="inline-block fill-gray-800 size-8 transition dark:fill-white"
    />
</a>
