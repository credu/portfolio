---
import { Image } from "astro:assets";

interface Props {
    href: string;
    label: string;
    icon: ImageMetadata;
    iconLoading?: "eager" | "lazy";
    external?: boolean;
}

const { href, label, icon, iconLoading, external } = Astro.props;
---

<a
    class="inline-block border-2 border-white px-2 py-1 rounded-sm hover:bg-white transition-colors duration-300 group"
    href={href}
    {...external && { target: "_blank", rel: "noopener noreferrer" }}
>
    <Image
        class="inline-block invert-100 align-middle group-hover:invert-25 transition duration-300"
        src={icon}
        alt={label}
        loading={iconLoading}
    />
    <span
        class="align-middle inline-block ml-1 group-hover:text-gray-950 transition-colors duration-300"
        >{label}</span
    >
</a>
